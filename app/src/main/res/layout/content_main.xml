<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.aaron.proyecto3.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <TextView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:id="@+id/textoMensaje"
        android:layout_weight="0.01"
        android:text="Mensaje" />

    <EditText
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:id="@+id/message"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="@string/destinatario"
        android:id="@+id/textdestino"
        android:layout_weight="0.01" />


    <EditText
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/destino" />

    <CheckBox
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Msg Privado"
        android:id="@+id/priv"
        android:checked="false"
        android:layout_below="@+id/destino"
        android:layout_marginTop="43dp"
        android:layout_toStartOf="@+id/destino" />

    <TextView
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:id="@+id/textmensaje"
        android:layout_weight="0.03" />



</LinearLayout>


